
<div class="row justify-content-center">
    <div class="col-md-6  ">
        <div class="container mt-5 p-5">
            <h3 class="text-center">Create Your New Account</h3>
             <a class="text-dark" href="/">back</a>
            <form action="/signup" method="post">
                <div class="form-group mt-5">
                    <label>Name</label>
                    <input type="text" class="form-control mt-3" name="name" placeholder="enter your name" value="">
                </div>
                <div class="form-group mt-3">
                    <label>Email</label>
                    <input type="text" class="form-control mt-3" name="email" placeholder="enter valid Email" value="">
                </div>
                <div class="form-group mt-3">
                    <label>Password</label>
                    <input type="password" class="form-control mt-3" name="password" placeholder="password" value="">
                </div>

                <a class="text-dark" href="/login">Already you have an account</a>
                
               <button class="text-white btn btn-danger" type="submit">submit</button>
            </form>
        </div>
    </div>
</div>
