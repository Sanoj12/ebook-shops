{{>user-header}}
<section>


  <div class="main1">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <h1>WELCOME TO <span class="text-danger"> BOOK STORE .</span></h1>
          <a href="" class=" button btn btn-danger">Read More</a>
        </div>
      </div>
    </div>
  </div>








    <div class="main2 bg-light">
        <div class="container ">
            <div class="row">
                <div class="col-12 ">
                    <h3 class="text-center p-5">Best sellers</h3>
                </div>
                {{#each books}}

                <div class="col-md-3 p-2">



                    <div class="card p-2 pt-auto d-flex text-center border-1 border-danger" style="width: 220px; height: 560px;">
                        <img src="/book-images/{{this._id}}.jpg" class="card-img-top " alt="...">
                        <div class="card-body">
                            <h5 class="card-title mt=2">{{this.title}}</h5>
                            <p class="card-title">{{this.authorname}}</p>
                            <p class="card-title">{{this.category}}</p>
                            <p class="card-text">{{this.description}}</p>

                            <h4 class="card-title text-danger">Rs.{{this.price}}/-</h4>

                            <button onclick="addcartcount('{{this._id}}')" class="btn btn-danger">Add to cart</button>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
   
   


</section>

