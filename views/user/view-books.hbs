{{>user-header}}
<section>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h3 class="text-center p-5">Best sellers</h3>
            </div>
            {{#each books}}

            <div class="col-md-3 ">



                <div class="card p-3 m-3 d-flex " style="width: 18rem;">
                    <img src="/book-images/{{this._id}}.jpg" class="card-img-top p-4" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{this.title}}</h5>
                        <h5 class="card-title">{{this.authorname}}</h5>
                        <h5 class="card-title">{{this.category}}</h5>
                        <p class="card-text">{{this.description}}</p>

                        <h5 class="card-title">{{this.price}}</h5>
                       
                        <button onclick="addcartcount('{{this._id}}')" class="btn btn-danger">Add to cart</button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>

{{>footer}}