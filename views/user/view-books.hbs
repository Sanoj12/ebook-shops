{{>user-header}}
<section>
    <div class="container mt-5">
        <div class="row">
            <div class="col-12 ">
                <h3 class="text-center p-5">Best sellers</h3>
            </div>
            {{#each books}}

            <div class="col-sm-3 p-3 ">



                <div class="card p-3 pt-auto d-flex " style="width: 17rem; height: 500px;">
                    <img src="/book-images/{{this._id}}.jpg" class="card-img-top p-5 pt-4 m" alt="...">
                    <div class="card-body mb-3 pb-2">
                        <h5 class="card-title ">{{this.title}}</h5>
                        <h5 class="card-title">{{this.authorname}}</h5>
                        <h6 class="card-title">{{this.category}}</h6>
                        <p class="card-text">{{this.description}}</p>

                        <h6 class="card-title">Rs.{{this.price}}/-</h6>
                       
                        <button onclick="addcartcount('{{this._id}}')" class="btn btn-danger">Add to cart</button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>


    
</section>

{{>footer}}