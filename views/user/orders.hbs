{{>user-header}}
    
    <section>
    <div class="container">
        <div class="row mt-5 content-justify-center">
            
            <table class="table mt-2">
                <thead>
                    <tr>
                        <th scope="col">Date</th>
                        <th>Address</th>
                        <th>Place</th>
                        <th>pincode</th>
                        <th>phone</th>

                        
                        <th scope="col">Amount</th>
                        <th scope="col">payment</th>
                        <th>status</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each orders}}
                    <tr>
                       <td>{{this.date}}</td>
                        <td>{{this.details.address}}</td>
                        <td>{{this.details.place}}</td>
                        <td>{{this.details.pincode}}</td>
                        <td>{{this.details.phone}}</td>
                        <td>{{this.total}}</td>
                        <td>{{this.payment}}</td> 
                        <td>{{this.status}}</td> 

                       <td>
                         <a href="/view-order-books/{{this._id}}" class="btn btn-danger m-2">view books</a>
                      
</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>

        </div>
    </div>
</section>

<style>
    .container{
        height: 100vh;
    }
</style>

{{>footer}}