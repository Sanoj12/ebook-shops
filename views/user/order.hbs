
{{>user-header}}
<section>
    <div class="container mt-5">
        <form action=""  id="checkout-form">
            <div class="row">
                <div class="col-md-8">
                    <h2 class="mt-3 justify-align-center">Product Order Form</h2><br>
                     <div>
                        <label for="">Address</label>
                        <input type="text" class="form-control mt-2" id="address" name="address">

                        <label for="">Place</label>
                        <input type="text" class="form-control mt-2" id="place" name="place">

                         <label for="">Pincode</label>
                        <input type="text" class="form-control mt-2" id="pincode" name="pincode">


                        <label for="">Phone</label>
                        <input type="text" class="form-control mt-2 " id="phone" name="phone">

                         <input type="text" name="userId" id="" value="{{user._id}}" hidden>
                     </div>

                </div>
 
                <div class="col-md-4">
                    <div class="container mt-5 ml-5 checkout">
                        <h5>
                           Rs: {{total}}
                        </h5>
                        <hr>


                        <div class="payment">
                            <p>
                              Payment 
                           </p>

                           <label for="" class="radio-inline">
                              <input type="radio" name="payment" value="COD">Cash Payment
                           </label>
                             <br>
                           <label for="" class="radio-inline mt-2">
                                <input type="radio" name="payment" value="Online">Card Payment

                           </label>
                           <br>

                           <button class="btn btn-danger float-start mt-3" type="submit"> Checkout </button>
                        </div>
                    </div>
                </div>



            </div>
        </form>
</section>
{{>footer}}


<style>
    .container{
        height: 100vh;
    }
    input[type=radio]{
        width: 15px;
        height: 14px;
    }

    label.radio-inline{
        display: flex;
        align-items: center;
    }

    .checkout{
        border:1px solid;
        height: 360px;
        border-radius: 2px;
        padding: 40px;
    }
    .payment{
        padding-bottom: 32px;
    }
</style>

<script>
 
    
$("#checkout-form").submit((e) => {
    e.preventDefault()
    $.ajax({
        url: '/order',
        method: 'post',
        data:$('#checkout-form').serialize(),                                 //-- acess form data
        success: (response) => {
            if(response.status){
                location.href='/order-success'
            }
        }
    })
})


</script